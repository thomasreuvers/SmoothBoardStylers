@model SmoothBoardViewModel

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @if (TempData.ContainsKey("AddedSmoothBoard") && (bool) TempData.FirstOrDefault(x => x.Key == "AddedSmoothBoard").Value)
                {
                    <div class="alert alert-success alert-dismissible fade sho" role="alert">
                        Smoothboard is toegevoegd!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                else if (TempData.ContainsKey("AddedSmoothBoard") && !(bool)TempData.FirstOrDefault(x => x.Key == "AddedSmoothBoard").Value)
                {
                    <div class="alert alert-danger alert-dismissible fade sho" role="alert">
                        Oeps, er ging iets mis probeer het straks opnieuw!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>Welkom terug @User.Identity.Name!</h3>
                <hr/>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>Voeg een smoothboard toe</h3>
                <form asp-action="AddSmoothBoard" asp-antiforgery="true" asp-controller="Admin" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Model"></label>
                            <input asp-for="Model" class="form-control"/>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="SmoothBoardImage"></label>
                        <input asp-for="SmoothBoardImage" class="form-control"/>
                    </div>

                    <input class="btn btn-primary" type="submit" value="Toevoegen"/>
                </form>
            </div>
        </div>
    </div>
</div>
