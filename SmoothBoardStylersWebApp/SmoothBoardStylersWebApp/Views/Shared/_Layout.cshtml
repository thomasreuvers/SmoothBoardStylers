@using SmoothBoardStylersWebApp.ExtensionMethods
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmoothBoardStylersWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!--Main Navigation-->
    <header>

        <!--NavBar-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">

                <!--Navbar brand-->
                <a class="navbar-brand" href="#">Smoothboard Stylers</a>

                <!--Collapse button-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="False" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Collapsible content-->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <!-- Links -->
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a></li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @Html.IsSelected(actions: "Index", controllers: "Home")" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Html.IsSelected(actions: "Index", controllers: "SmoothBoard")" asp-action="Index" asp-controller="SmoothBoard">Smoothboards</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Html.IsSelected(actions: "FrequentlyAskedQuestions", controllers: "Home")" asp-action="FrequentlyAskedQuestions" asp-controller="Home">FAQ</a>
                            </li>
                        }
                    </ul>

                </div>

            </div>

        </nav>

    </header>

    <!--Main Layout-->
    <main>
        @RenderBody()
    </main>

        <!--Footer-->
        <footer class="page-footer pt-4">

            <!-- Footer Links -->
            <div class="container-fluid text-center text-md-left">

                <!-- Grid row -->
                <div class="row">


                    <!-- Grid column -->
                    <div class="col-md-6 mb-md-0 mb-3 text-center">

                        <!-- Links -->
                        <h5 class="text-uppercase">Contact</h5>

                        <ul class="list-unstyled">
                            <li>
                                <p>Example adress</p>
                            </li>
                            <li>
                                <p>+31 06 12345678</p>
                            </li>
                            <li>
                                <p>seanjensen@example.com</p>
                            </li>
                        </ul>

                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-6 mb-md-0 mb-3 text-center">

                        <!-- Links -->
                        <h5 class="text-uppercase">Pages</h5>

                        <ul class="list-unstyled">
                            <li>
                                <a class="@Html.IsSelected(actions: "Index", controllers: "Home")" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li>
                                <a class="@Html.IsSelected(actions: "Index", controllers: "SmoothBoard")" asp-action="Index" asp-controller="SmoothBoard">Smoothboards</a>
                            </li>
                            <li>
                                <a class="@Html.IsSelected(actions: "FrequentlyAskedQuestions", controllers: "Home")" asp-action="FrequentlyAskedQuestions" asp-controller="Home">FAQ</a>
                            </li>
                            <li>
                                <a class="@Html.IsSelected(actions: "Login", controllers: "Account")" asp-action="Login" asp-controller="Account">Admin</a>
                            </li>
                        </ul>

                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </div>
            <!-- Footer Links -->
            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
                © 2020 Copyright:
                Smoothboard Stylers
            </div>
            <!-- Copyright -->

        </footer>
        <!-- Footer -->

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)

        <script type="text/javascript">
            $('.open-modal').on('click',
                function() {
                    var t = $(this);
                    var smoothBoardId = t.data('smoothboardmodel');

                    $('#smooth-board-id').val(smoothBoardId);
                });
        </script>
</body>
</html>
